{
  "extends": "@tsconfig/node24/tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"],

    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "babel.config.cjs",
    "eslint.config.ts",
    "rspack.config.ts",
    "jest.config.ts",
    "*.config.js",
    "*.config.ts",
    "*.config.mjs"
  ],
}
