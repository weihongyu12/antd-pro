{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "vcs": { "enabled": true, "clientKind": "git", "useIgnoreFile": true },
  "formatter": { "indentStyle": "space" },
  "linter": {
    "enabled": true,
    "rules": { "recommended": false, "suspicious": { "noConsole": "off" } },
    "includes": [
      "**",
      "!**/.DS_Store",
      "!**/*.local",
      "!**/*.log*",
      "!**/node_modules",
      "!**/dist/",
      "!**/.rspack-profile-*/",
      "!.vscode/*",
      ".vscode/extensions.json",
      "!**/.idea"
    ]
  },
  "javascript": { "formatter": { "quoteStyle": "single" } },
  "css": {
    "parser": { "allowWrongLineComments": null, "cssModules": true },
    "formatter": null,
    "linter": null,
    "assist": null
  },
  "overrides": [{ "includes": ["*.tsx"], "linter": { "rules": {} } }],
  "assist": {
    "enabled": null,
    "actions": { "source": { "organizeImports": "on" } }
  }
}
